# language
export LANG=en_US.UTF-8

# homebrew
export PATH=/usr/local/bin/:/usr/local/sbin/:/Users/tamurine/bin:$PATH
# heroku
export PATH=$PATH:/usr/local/heroku/bin

# rbenv
if [ -f ~/.rbenv/bin/rbenv ]; then
	export PATH=~/.rbenv/bin:$PATH
fi
type rbenv > /dev/null 2>&1 && eval "$(rbenv init -)"

# phpenv
if [ -f ~/.phpenv/bin/phpenv ]; then
	export PATH=~/.phpenv/bin:$PATH
fi
type phpenv > /dev/null 2>&1 && eval "$(phpenv init -)"

# nvm
if [ -f ~/.nvm/nvm.sh ]; then
	alias shasum='sha1sum'
	. ~/.nvm/nvm.sh
fi

# scm
export SVN_EDITOR=vim

# appearance
export TERM=xterm-256color

# vim
export VIM_ROOT=/Users/tamurine/.vim

# export macvim
if [[ "$OSTYPE" =~ "darwin" ]] && [ -d /Applications/MacVim.app/Contents/MacOS ];then
	export PATH=/Applications/MacVim.app/Contents/MacOS:$PATH
fi

# load local env files
if [ -e ~/.env.d ]; then
	for env in ~/.env.d/*.env ; do
		source $env
	done
fi
